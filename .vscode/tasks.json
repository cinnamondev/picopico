{
    "version": "2.0.0",
    "linux": {
        "options": {
            "shell": {
                "executable": "/usr/bin/pwsh",
                "args": ["-CommandWithArgs"],
            }
        }
    },
    "tasks": [
        {
            "type": "shell",
            "command": "./buildgen.ps1",
            "label": "Build (debug)",
            "args": [
                "Debug",
                "picopico",
                "cmsis_core,hardware_spi,hardware_dma,hardware_irq" // user insert here :)
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }

        },
        {
            "type": "shell",
            "command": "./buildgen.ps1",
            "label": "Build (debug)",
            "args": [
                "Debug",
                "picopico",
                "cmsis_core,hardware_spi,hardware_dma,hardware_irq" // user insert here :)
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }

        },
        {
            "type": "shell",
            "command": "./bootstrap.ps1",
            "label": "bootstrap"
        },
        {
            "type": "shell",
            "dependsOn": ["Buildgen-Debug-Build", "picopico program"],
            "dependsOrder":"sequence",
            "label": "BUILDGEN & PROGRAM",
            "group": "build"
        },
        {
            "type": "shell",
            "dependsOn": ["bootstrap"],
            "command": "openocd -f ./openocd.cfg -c “program ./build/picopico/Debug/out/picopico.elf verify reset exit”",
            "label": "picopico program",
        },
        {
            "type": "shell",
            "dependsOn": ["bootstrap"],
            "command": "openocd -f interface/cmsis-dap.cfg -f target/rp2040.cfg -f ./openocd.cfg -c “init ; reset halt ; rp2040.core1 arp_reset assert 0 ; rp2040.core0 arp_reset assert 0 ; exit”",
            "label": "picopico reset",
        }
    ]
}